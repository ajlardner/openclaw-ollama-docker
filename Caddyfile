{$DOMAIN:localhost} {
    reverse_proxy openclaw-gateway:18789
    
    # WebSocket support for bridge
    @bridge path /bridge/*
    handle @bridge {
        reverse_proxy openclaw-gateway:18790
    }

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }

    # Optional: basic auth (uncomment and set credentials)
    # basicauth /* {
    #     admin $2a$14$... # caddy hash-password
    # }
}
